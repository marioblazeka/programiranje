#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    struct Mario {
        char preime[40];
        char spol;
        int visina;
        int tezina;
    } osobe[50];

    // Inicijalizacija generatora slučajnih brojeva
    srand(time(0));

    // Generisanje slučajnih podataka za 50 osoba
    for (int i = 0; i < 50; i++) {
        // Generisanje imena i prezimena
        snprintf(osobe[i].preime, 40, "Osoba_%d", i + 1);

        // Nasumično generisanje spola
        osobe[i].spol = (rand() % 2 == 0) ? 'M' : 'Z';

        // Nasumično generisanje visine (u centimetrima) i težine (u kilogramima)
        osobe[i].visina = 150 + rand() % 51;  // Visina između 150 i 200 cm
        osobe[i].tezina = 50 + rand() % 51;   // Težina između 50 i 100 kg
    }

    // Ispis generisanih podataka
    for (int i = 0; i < 50; i++) {
        cout << "Prezime i ime: " << osobe[i].preime << endl;
        cout << "Spol: " << osobe[i].spol << endl;
        cout << "Visina: " << osobe[i].visina << " cm" << endl;
        cout << "Težina: " << osobe[i].tezina << " kg" << endl;
        cout << "--------------------------" << endl;
    }

    return 0;
}
