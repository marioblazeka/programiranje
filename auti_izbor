#include <iostream>
using namespace std;

struct automobil {
    char marka[20], tip[20];
    float potrosnja;
    int snaga, velicina, cijena;
}; 

struct auti {
    automobil vozilo[100];
    int broj;
};

int main() {
    auti A;
    int N;
    
    // Unos broja vozila
    do {
        cout << "N = ";
        cin >> N;
    } while (N < 1 || N > 100);
    A.broj = N;

    for (int i = 0; i < A.broj; i++) {
        cout << "Marka vozila: ";
        cin.ignore();
        cin.getline(A.vozilo[i].marka, 20);
        
        cout << "Tip vozila: ";
        cin.getline(A.vozilo[i].tip, 20);
        
        cout << "Potrosnja (l/100 km): ";
        cin >> A.vozilo[i].potrosnja;
        
        cout << "Snaga vozila (u kW): ";
        cin >> A.vozilo[i].snaga;
        
        cout << "Velicina vozila (u metrima): ";
        cin >> A.vozilo[i].velicina;
        
        cout << "Cijena vozila (u eurima): ";
        cin >> A.vozilo[i].cijena;
    }

    int snaga, velicina, cijena;
    float potrosnja;
    bool izbor[100];
    
    // Inicijalizacija izbora
    for (int i = 0; i < A.broj; i++)
        izbor[i] = true;

    // Unos kriterija za filtriranje
    while (true) {
        cout << "Potrosnja (0 za kraj): ";
        cin >> potrosnja;
        
        cout << "Snaga (0 za kraj): ";
        cin >> snaga;
        
        cout << "Velicina motora (0 za kraj): ";
        cin >> velicina;
        
        cout << "Cijena (0 za kraj): ";
        cin >> cijena;
        
        if (potrosnja == 0 && snaga == 0 && velicina == 0 && cijena == 0)
            break;

        // Filtriranje vozila prema zadanim kriterijima
        for (int i = 0; i < A.broj; i++) {
            if (potrosnja > 0 && A.vozilo[i].potrosnja > potrosnja)
                izbor[i] = false;
            if (snaga > 0 && A.vozilo[i].snaga > snaga)
                izbor[i] = false;
            if (velicina > 0 && A.vozilo[i].velicina > velicina)
                izbor[i] = false;
            if (cijena > 0 && A.vozilo[i].cijena > cijena)
                izbor[i] = false;
        }
    }

    // Ispis filtriranih vozila
    for (int i = 0; i < A.broj; i++) {
        if (izbor[i]) {
            cout << "Marka: " << A.vozilo[i].marka
                 << ", Tip: " << A.vozilo[i].tip
                 << ", Potrosnja: " << A.vozilo[i].potrosnja
                 << ", Snaga: " << A.vozilo[i].snaga
                 << ", Velicina: " << A.vozilo[i].velicina
                 << ", Cijena: " << A.vozilo[i].cijena << " eura" << endl;
        }
    }

    return 0;
}
